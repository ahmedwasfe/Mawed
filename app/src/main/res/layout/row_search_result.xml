<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_187sdp">

    <ImageView
        android:id="@+id/iv_salon_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_185sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_test1"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_185sdp"
        android:background="@drawable/bg_overlay_item"
        android:layout_alignBottom="@id/iv_salon_image"
        android:layout_alignTop="@id/iv_salon_image"
        android:layout_alignStart="@id/iv_salon_image"
        android:layout_alignEnd="@id/iv_salon_image"/>

    <ImageView
        android:id="@+id/iv_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_10sdp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_salon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Happiness salon"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_salon_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_icon_salon_home"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_below="@id/tv_salon_name"/>

        <TextView
            android:id="@+id/tv_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="14sp"
            android:textColor="@color/colorSubText1"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_toEndOf="@id/iv_salon_home"
            android:layout_below="@id/tv_salon_name"/>

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:max="3"
            android:progress="5"
            android:progressTint="@color/colorYallow"
            android:indeterminateTint="@color/colorWhite"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_below="@id/tv_salon_name"
            android:layout_toEndOf="@id/tv_rate"/>

        <TextView
            android:id="@+id/tv_salon_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/colorWhite"
            android:drawablePadding="@dimen/_4sdp"
            android:drawableStart="@drawable/ic_icon_location"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_below="@id/tv_salon_name"
            android:layout_toEndOf="@id/ratingBar"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/colorWhite"
        android:layout_below="@+id/iv_salon_image"/>

</RelativeLayout>