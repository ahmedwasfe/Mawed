<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_snackbar"
    android:layout_margin="@dimen/_20sdp"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="@dimen/_1sdp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/colorDarkRed">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/check_internet"
            android:textColor="@color/colorWhite"
            android:textAlignment="viewStart"
            android:lineHeight="@dimen/_16sdp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/tv_click_wifi"/>

        <TextView
            android:id="@+id/tv_click_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/dlg_wifi"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_14ssp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="false" />

    </RelativeLayout>
    


</androidx.cardview.widget.CardView>