<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_10sdp"
    android:layout_gravity="center"
    android:background="@drawable/bg_selected">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_employee_image"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        app:riv_corner_radius="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/image_test2"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_employee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/_8sdp"
        android:textColor="@color/colorSubButtonText"
        android:padding="@dimen/_4sdp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/riv_employee_image"/>

    <TextView
        android:id="@+id/tv_all_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="16sp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textColor="@color/colorSubButtonText"
        android:padding="@dimen/_4sdp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_employee_name"/>

</RelativeLayout>