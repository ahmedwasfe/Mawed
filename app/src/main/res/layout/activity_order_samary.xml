<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.raiyansoft.mawed.ui.activities.orders.OrderSamaryActivity">

    <RelativeLayout
        android:id="@+id/rel_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_16sdp"
            android:src="@drawable/ic_icon_arrow_back"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/order_samary"
            android:textColor="@color/colorMainText"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/icon_share"/>

    </RelativeLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rel_toolbar">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginTop="@dimen/_10sdp">

            <LinearLayout
                android:id="@+id/ll_order_details"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp">

                <RelativeLayout
                    android:id="@+id/rel_order_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/bg_selected">

                    <TextView
                        android:id="@+id/tv_text_order_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/order_number"
                        android:textSize="16sp"
                        android:textColor="@color/colorSubButtonText"
                        android:layout_marginStart="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/tv_order_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_order_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/bg_selected">

                    <TextView
                        android:id="@+id/tv_text_order_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/order_time"
                        android:textSize="16sp"
                        android:textColor="@color/colorSubButtonText"
                        android:layout_marginStart="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/tv_order_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_order_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/bg_selected">

                    <TextView
                        android:id="@+id/tv_text_order_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/order_status"
                        android:textSize="16sp"
                        android:textColor="@color/colorSubButtonText"
                        android:layout_marginStart="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/tv_order_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_salon_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/bg_selected">

                    <TextView
                        android:id="@+id/tv_text_salon_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/name_salon"
                        android:textSize="16sp"
                        android:textColor="@color/colorSubButtonText"
                        android:layout_marginStart="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/tv_salon_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_barber_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/bg_selected">

                    <TextView
                        android:id="@+id/tv_text_barber_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/name_barber"
                        android:textSize="16sp"
                        android:textColor="@color/colorSubButtonText"
                        android:layout_marginStart="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/tv_Employee_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_payment_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/bg_selected">

                    <TextView
                        android:id="@+id/tv_text_payment_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/payment_method"
                        android:textSize="16sp"
                        android:textColor="@color/colorSubButtonText"
                        android:layout_marginStart="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/tv_payment_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_discount_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/bg_selected">

                    <TextView
                        android:id="@+id/tv_text_discount_coupon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/discount_coupon"
                        android:textSize="16sp"
                        android:textColor="@color/colorSubButtonText"
                        android:layout_marginStart="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/tv_discount_coupon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_services"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_selected"
                    android:layout_marginTop="@dimen/_10sdp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_services"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <RelativeLayout
                        android:id="@+id/rel_service_fee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_14sdp"
                        android:layout_below="@id/recycler_services">

                        <TextView
                            android:id="@+id/tv_service_fee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:text="@string/service_fee"
                            android:textSize="16sp"
                            android:textColor="@color/colorSubButtonText"
                            android:layout_marginStart="@dimen/_6sdp"/>

                        <TextView
                            android:id="@+id/tv_service_fee_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:textSize="16sp"
                            android:textColor="@color/colorSubButtonText"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_alignParentEnd="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rel_discount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_14sdp"
                        android:layout_below="@id/rel_service_fee">

                        <TextView
                            android:id="@+id/tv_text_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:text="@string/discount"
                            android:textSize="16sp"
                            android:textColor="@color/colorSubButtonText"
                            android:layout_marginStart="@dimen/_6sdp"/>

                        <TextView
                            android:id="@+id/tv_discount_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:textSize="16sp"
                            android:textColor="@color/colorSubButtonText"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_alignParentEnd="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_14sdp"
                        android:layout_below="@id/recycler_services">

                        <TextView
                            android:id="@+id/tv_service_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:text="@string/service_fee"
                            android:textSize="16sp"
                            android:textColor="@color/colorSubButtonText"
                            android:layout_marginStart="@dimen/_6sdp"/>

                        <TextView
                            android:id="@+id/tv_service_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:textSize="16sp"
                            android:textColor="@color/colorSubButtonText"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_alignParentEnd="true"/>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_total"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/bg_total"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:padding="@dimen/_10sdp"
                    android:layout_below="@id/rel_discount">

                    <ImageView
                        android:id="@+id/iv_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_icon_usd"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/tv_text_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/total"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_toEndOf="@id/iv_icon"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/tv_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_booking_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/bg_selected">

                    <TextView
                        android:id="@+id/tv_text_booking_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/booking_date"
                        android:textSize="16sp"
                        android:textColor="@color/colorSubButtonText"
                        android:layout_marginStart="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/tv_booking_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_booking_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/bg_selected">

                    <TextView
                        android:id="@+id/tv_text_booking_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/booking_time"
                        android:textSize="16sp"
                        android:textColor="@color/colorSubButtonText"
                        android:layout_marginStart="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/tv_booking_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/bg_selected">

                    <TextView
                        android:id="@+id/tv_text_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/location"
                        android:textSize="16sp"
                        android:textColor="@color/colorSubButtonText"
                        android:layout_marginStart="@dimen/_10sdp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_icon_arrow_right"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:text="@string/changing_appoiment"
                    android:textColor="@color/colorSubText"
                    android:textSize="14sp"
                    android:layout_marginTop="@dimen/_8sdp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_40sdp">

                    <Button
                        android:layout_weight="1"
                        android:id="@+id/btn_call"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_44sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:background="@drawable/bg_btn"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="@string/call"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:theme="@style/ButtonMainTheme" />

                    <RelativeLayout
                        android:layout_weight="1"
                        android:id="@+id/rel_change_date"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_44sdp"
                        android:background="@drawable/bg_total"
                        android:layout_marginStart="@dimen/_4sdp">

                        <TextView
                            android:id="@+id/tv_change_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:text="Change date"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>



    <ProgressBar
        android:visibility="gone"
        android:id="@+id/pb_loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:indeterminateTint="@color/colorPrimary"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_centerInParent="true"/>

</RelativeLayout>